<Window x:Class="SpringBall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="420" Width="750" MouseMove="Window_MouseMove">
    <Canvas Name="myCanvas" >
        <Ellipse Width="20" Height="20" Fill="Red" Canvas.Left="200" Canvas.Top="150" Name="ball" />
        <Rectangle Width="10" Height="100" Fill="Aqua" Canvas.Left="0" Canvas.Top="30" Name="leftPaddle"/>
        <Rectangle Width="10" Height="100" Fill="Aqua" Canvas.Right="0" Canvas.Top="30" Name="rightPaddle"/>

    </Canvas>
</Window>
